import java.util.Scanner;

public class Menu {
	
	public int opcao;
	Scanner leitor = new Scanner(System.in);
	
	public int menuPrincipal(){
		System.out.println("------------------------------------------");
		System.out.println("\t\tBEM VINDO AO REGISTRO DE VENDAt\t\n\n");
		System.out.println("\n1-EFETUAR VENDA");
		System.out.println("\n2-REGISTRAR VENDEDOR");
		System.out.println("\n3-REGISTRAR PRODUTO");
		System.out.println("\n4-SAIR");
		System.out.println("------------------------------------------");
		
		
		setOpcao(leitor.nextInt());
		
		return opcao;
	}
	
	public int menuRetorno(){
		System.out.println("------------------------------------------");
		System.out.println("1-VOLTAR AO MENU");
		System.out.println("2-REGRISTAR OUTRO VENDEDOR");
		System.out.println("\n4- SAIR");
		
		setOpcao(leitor.nextInt());
		
		return opcao;
	}
	
	public int getOpcao() {
		return opcao;
	}
	

	public void setOpcao(int opcao) {
		this.opcao = opcao;
	}


}
