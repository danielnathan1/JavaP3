package aula3;

import java.util.Scanner;

public class Cerveja {
	public static void main(String[] args) {
		
		Scanner leitor = new Scanner(System.in);
		
		int nCerveja= 0;
		
		System.out.println("Digite o numero de cervejas da freezer: \n");
		
		nCerveja = leitor.nextInt();
		
		while(nCerveja>0){
			System.out.println(nCerveja + " Cerverjas na freezer\nPego uma garrafa, passo pra frente");
			
			nCerveja-=1;
			
			System.out.println("Agora são " + nCerveja +" Cervejas na freezer");
				
		}
		
		
		
		
		
	}
}
